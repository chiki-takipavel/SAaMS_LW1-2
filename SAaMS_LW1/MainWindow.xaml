<Window x:Class="SAaMS_LW1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SAaMS_LW1"
        xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
        xmlns:vms="clr-namespace:SAaMS_LW1.ViewModels"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.FontWeight="Medium"
        TextElement.FontSize="14"
        FontFamily="{materialDesign:MaterialDesignFont}"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Генератор случайных величин"
        MinHeight="600" MinWidth="900"
        Height="700" Width="1000">
    <Window.DataContext>
        <vms:ChartViewModel/>
    </Window.DataContext>

    <Grid>
        <Grid Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <materialDesign:Card 
                Grid.Row="0"
                Padding="16" 
                Height="Auto"
                UniformCornerRadius="8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <Grid VerticalAlignment="Center" Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBox 
                            x:Name="tbParamA"
                            Style="{DynamicResource MaterialDesignOutlinedTextBox}"
                            Grid.Row="0"
                            Margin="0 0 0 6"
                            Padding="10"
                            PreviewTextInput="FloatNumberValidation"
                            materialDesign:HintAssist.Hint="Введите a">
                        </TextBox>
                        <TextBox 
                            x:Name="tbParamR0"
                            Style="{DynamicResource MaterialDesignOutlinedTextBox}"
                            Margin="0 6"
                            Grid.Row="1"
                            Padding="10"
                            PreviewTextInput="FloatNumberValidation"
                            materialDesign:HintAssist.Hint="Введите R0">
                        </TextBox>
                        <TextBox 
                            x:Name="tbParamM"
                            Style="{DynamicResource MaterialDesignOutlinedTextBox}"
                            Grid.Row="2"
                            Margin="0 6 0 0"
                            Padding="10"
                            PreviewTextInput="FloatNumberValidation"
                            materialDesign:HintAssist.Hint="Введите m">
                        </TextBox>
                    </Grid>

                    <Separator
                        Grid.Column="1"
                        HorizontalAlignment="Left"
                        Style="{StaticResource MaterialDesignDarkSeparator}"
                        Margin="8 0">
                        <Separator.LayoutTransform>
                            <RotateTransform Angle="90" />
                        </Separator.LayoutTransform>
                    </Separator>

                    <Grid VerticalAlignment="Center" Grid.Column="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="16"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <TextBlock 
                            Style="{DynamicResource MaterialDesignTextBlock}"
                            Grid.Column="0"
                            Grid.Row="0"
                            Margin="0 0 0 4"
                            Text="Математическое ожидание (m)">
                        </TextBlock>
                        <TextBlock
                            x:Name="tblExpectedValue"
                            Style="{DynamicResource MaterialDesignTextBlock}"
                            Grid.Column="2"
                            Grid.Row="0"
                            FontWeight="Bold"
                            Margin="0 0 0 4"
                            TextTrimming="CharacterEllipsis">
                        </TextBlock>
                        <TextBlock 
                            Style ="{DynamicResource MaterialDesignTextBlock}"
                            Margin="0 4"
                            Grid.Column="0"
                            Grid.Row="1"
                            Text="Дисперсия (D)">
                        </TextBlock>
                        <TextBlock
                            x:Name="tblDispersion"
                            Style="{DynamicResource MaterialDesignTextBlock}"
                            FontWeight="Bold"
                            Margin="0 4"
                            Grid.Row="1"
                            Grid.Column="2"
                            TextTrimming="CharacterEllipsis">
                        </TextBlock>
                        <TextBlock 
                            Style="{DynamicResource MaterialDesignTextBlock}"
                            Text="Среднеквадратическое отклонение (σ)"
                            Margin="0 4"
                            Grid.Column="0"
                            Grid.Row="2">
                        </TextBlock>
                        <TextBlock
                            x:Name="tblStandartDeviation"
                            Style="{DynamicResource MaterialDesignTextBlock}"
                            FontWeight="Bold"
                            Grid.Row="2"
                            Grid.Column="2"
                            Margin="0 4"
                            TextTrimming="CharacterEllipsis">
                        </TextBlock>
                        <TextBlock 
                            Style="{DynamicResource MaterialDesignTextBlock}"
                            Text="Период"
                            Margin="0 4"
                            Grid.Column="0"
                            Grid.Row="3">
                        </TextBlock>
                        <TextBlock
                            x:Name="tblPeriod"
                            Style="{DynamicResource MaterialDesignTextBlock}"
                            FontWeight="Bold"
                            Grid.Row="3"
                            Grid.Column="2"
                            Margin="0 4"
                            TextTrimming="CharacterEllipsis">
                        </TextBlock>
                        <TextBlock 
                            Style="{DynamicResource MaterialDesignTextBlock}"
                            Text="Проверка"
                            Margin="0 4 0 0"
                            Grid.Column="0"
                            Grid.Row="4">
                        </TextBlock>
                        <TextBlock
                            x:Name="tblCheck"
                            Style="{DynamicResource MaterialDesignTextBlock}"
                            FontWeight="Bold"
                            Grid.Row="4"
                            Grid.Column="2"
                            Margin="0 4 0 0"
                            TextTrimming="CharacterEllipsis">
                        </TextBlock>
                    </Grid>

                    <Separator
                        Grid.Column="3"
                        HorizontalAlignment="Left"
                        Style="{StaticResource MaterialDesignDarkSeparator}"
                        Margin="8 0">
                        <Separator.LayoutTransform>
                            <RotateTransform Angle="90" />
                        </Separator.LayoutTransform>
                    </Separator>
                
                    <Grid Grid.Column="4">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="2*"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="2*"/>
                        </Grid.RowDefinitions>
                        
                        <ComboBox
                            Style="{StaticResource MaterialDesignOutlinedComboBox}"
                            Grid.Row="1"
                            Padding="10"
                            Margin="0 0 0 6"
                            materialDesign:HintAssist.Hint="Выберите распределение">
                        </ComboBox>
                        <Button 
                            x:Name="btnGenerate"
                            Grid.Row="3"
                            Content="Сгенерировать"
                            Margin="0 6 0 0" 
                            HorizontalAlignment="Stretch"
                            Click="ButtonGenerate_Click" Height="36.4">
                            <Button.Style>
                                <Style TargetType="{x:Type Button}" BasedOn="{StaticResource MaterialDesignRaisedButton}">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Text.Length, ElementName=tbParamA, UpdateSourceTrigger=PropertyChanged}" Value="0">
                                            <Setter Property="IsEnabled" Value="False"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Text.Length, ElementName=tbParamR0, UpdateSourceTrigger=PropertyChanged}" Value="0">
                                            <Setter Property="IsEnabled" Value="False"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Text.Length, ElementName=tbParamM, UpdateSourceTrigger=PropertyChanged}" Value="0">
                                            <Setter Property="IsEnabled" Value="False"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>
                </Grid>
            </materialDesign:Card>

            <lvc:CartesianChart
                Margin="0 16 0 0"
                Series="{Binding Series}"
                XAxes="{Binding XAxes}"
                YAxes="{Binding YAxes}"
                Grid.Row="1">
            </lvc:CartesianChart>
        </Grid>

        <materialDesign:Snackbar
            x:Name="sbError"
            HorizontalAlignment="Center">
            <materialDesign:SnackbarMessage 
                ActionContent="OK">
            </materialDesign:SnackbarMessage>
        </materialDesign:Snackbar>
    </Grid>
</Window>
